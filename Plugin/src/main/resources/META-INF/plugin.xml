<idea-plugin>
    <id>oop_helper_handout</id>
    <name>oop_helper_handout</name>
    <vendor email="marlena.wolfes@stud.uni-regensburg.de" url="http://www.company.com">Company</vendor>

    <description><![CDATA[
    description <br>
    <em>keine Ahnung was hier rein soll</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <!-- Plugin's application components -->
    <project-components>
        <component>
            <interface-class>controller.HandoutPluginControllerInterface</interface-class>
            <implementation-class>controller.HandoutPluginController</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="handoutToolWindow" anchor="right" factoryClass="ToolWindow.HandoutToolWindowFactory"/>
        <projectService serviceInterface="services.HandoutDataProvider" serviceImplementation="services.impl.HandoutDataProviderImpl"/>
    </extensions>

    <actions>
        <group id="MyPlugin.SampleMenu" text="OOP-Helper-Handout" description="Plugin menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes.Tutorial" class="Actions.HelperHandoutActionTutorial" text="Tutorial" description="Start Tutorial"/>
            <!--<action id="Myplugin.Textboxes.Reset" class="Actions.HelperHandoutActionReset" text="Reset" description="Start Tutorial"/>-->
            <action id="Myplugin.Textboxes.Export" class="Actions.HelperHandoutActionExport" text="Export" description="Start Tutorial"/>
        </group>
    </actions>
</idea-plugin>