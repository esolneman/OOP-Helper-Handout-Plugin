<idea-plugin>
    <id>oop_helper_handout</id>
    <name>oop_helper_handout</name>
    <vendor email="marlena.wolfes@stud.uni-regensburg.de">Marlena Wolfes</vendor>

    <description><![CDATA[
    Unterstützt die Studenten des OOP-Kurses der Univerität Regensburg bei der Bearbeitung von Studienleistung und Übungsaufgben<br>
    <em>Mehr erklärung folgt</em>
    ]]></description>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <!-- uncomment to enable plugin in all products
    <depends>com.intellij.modules.lang</depends>
    -->
    <!-- Plugin's application components -->
    <project-components>
        <component>
            <interface-class>controller.HandoutPluginControllerInterface</interface-class>
            <implementation-class>controller.HandoutPluginController</implementation-class>
        </component>
    </project-components>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="handoutToolWindow" anchor="right" factoryClass="toolWindow.HandoutToolWindowFactory"/>
        <projectService serviceInterface="provider.HandoutContentDataProviderInterface" serviceImplementation="provider.HandoutContentDataProvider"/>
        <projectService serviceInterface="services.ToolWindowServiceInterface" serviceImplementation="services.ToolWindowService"/>
    </extensions>

    <actions>
        <group id="MyPlugin.SampleMenu" text="OOP-Helper-Handout" description="Plugin menu">
            <add-to-group group-id="MainMenu" anchor="last"/>
            <action id="Myplugin.Textboxes.Tutorial" class="handoutMenuActions.HandoutMenuTutorial" text="Tutorial" description="Start Tutorial" icon="/icons/contextHelp.svg"/>
            <action id="Myplugin.Textboxes.Update" class="handoutMenuActions.HandoutMenuUpdateContent" text="Update Handout Data" description="Download latest version of content data" icon="/icons/updateFolders.svg"/>
            <action id="Myplugin.Textboxes.Export" class="handoutMenuActions.HandoutMenuExport" text="Export" description="Start Export" icon="/icons/export.svg"/>
        </group>
        <group id="HandoutToolWindow" text="test" description="test menu">
            <action id="Handout.Download" class="toolWindow.actions.HandoutDownloadAction" text="Download" description="Download" icon="/icons/download.svg"> </action>
            <action id="Handout.TableOfContents" class="toolWindow.actionGroups.HandoutContentActionGroup" text="Inhaltsverzeichnis" description="content" icon="/icons/listFiles.svg"> </action>
            <action id ="Handout.Maximize" class="toolWindow.actions.ToolWindowMaximizeAction" text="Maximize" description="maximize Tool Window" icon="/icons/maximize.svg"> </action>
            <action id ="Handout.Minimize" class="toolWindow.actions.ToolWindowMinimizeAction" text="Minimize" description="minimize Tool Window" icon="/icons/minimize.svg"> </action>
            <action id ="Checklist.EditContent" class="toolWindow.actions.EditChecklist" text="edit checklist" description="editiere die Checkliste" icon="/icons/editSource.svg"> </action>
        </group>
        <action id="CommonAssessmentCriteria.TableOfContents" class="toolWindow.actionGroups.HandoutContentActionGroup" text="Inhaltsverzeichnis" description="content" icon="/icons/listFiles.svg"> </action>
        <group id="CommonInformation" text="test" description="test menu">
            <!--TODO Display only name without default icon -->
            <action id="CommonInformation.CodingStyles" class="toolWindow.actions.SwitchWebViewUrl" text="CodingStyles" description="CodingStyles" > </action>
            <action id="CommonInformation.Variables" class="toolWindow.actions.SwitchWebViewUrl" text="Variables" description="Variables" > </action>
            <action id ="CommonInformation.Shortcut" class="toolWindow.actions.SwitchWebViewUrl" text="Shortcut" description="Shortcut"> </action>
        </group>
        <group id="NotesAction" text="test" description="test menu">
            <!--TODO Display only name without default icon -->
            <action id="Notes.AddEntry" class="toolWindow.actions.SwitchWebViewUrl" text="CodingStyles" description="CodingStyles" > </action>
        </group>
    </actions>
</idea-plugin>